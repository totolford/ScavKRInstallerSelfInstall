<Window x:Class="ScavKRInstaller.Installer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScavKRInstaller"
        mc:Ignorable="d"
        Title="Scav Krokosha Multiplayer Installer" Height="175" Width="510" ResizeMode="NoResize" Closing="Window_Closing">
    <Window.Resources>
        <Style x:Key="MainTextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Padding" Value="5,0,0,5"></Setter>
        </Style>
        <Style x:Key="MainTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Padding" Value="5,0,0,5"></Setter>
        </Style>
        <Style x:Key="MainButton" TargetType="{x:Type Button}">
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Padding" Value="5,0,0,5"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource MainTextBlock}" Grid.Row="0">Ensure that you're using <Hyperlink NavigateUri="https://orsonik.itch.io/scav-prototype" RequestNavigate="Hyperlink_RequestNavigate">Demo 5 Pre-Test 4</Hyperlink>!</TextBlock>
        <TextBlock Style="{StaticResource MainTextBlock}" Grid.Row="1">Game path:</TextBlock>
        <TextBox x:Name="TextBoxGamePath" Style="{StaticResource MainTextBox}" Margin="110,0,0,0" Height="28" VerticalContentAlignment="Center" FontSize="15" Grid.Row="1" HorizontalAlignment="Left" Width="301" TextChanged="TextBoxGamePath_TextChanged"></TextBox>
        <Button x:Name="ButtonBrowsePath" Style="{StaticResource MainButton}" Grid.Row="1" Width="70" HorizontalContentAlignment="Left" Height="30" Margin="416,0,0,0" HorizontalAlignment="Left" Click="ButtonBrowsePath_Click">Browse</Button>
        <TextBlock Style="{StaticResource MainTextBlock}" Grid.Row="2">Delete savefile? (recommended)</TextBlock>
        <CheckBox x:Name="CheckBoxSavefileDelete"  Grid.Row="2" VerticalAlignment="Center" Margin="266,0,0,0" IsChecked="True" HorizontalAlignment="Left" Width="18" Height="18"></CheckBox>
        <Button x:Name="ButtonInstall" Style="{StaticResource MainButton}" Grid.Row="3" Margin="5,0,5,0" IsEnabled="True" Click="ButtonInstall_Click">Install</Button>
    </Grid>
</Window>
